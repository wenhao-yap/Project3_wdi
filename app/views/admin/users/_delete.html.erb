<div class="modal-dialog">
    <div class="modal-content">
    <div class="modal-header">
        <h3>Deletion</h3>
    </div>
    <div class="modal-body">
    <ul class="errors"></ul>
        Are you sure you wish to delete <b><%= @user.name %></b>?
    </div>
    <div class="modal-footer">
    <%= link_to "Yes", admin_user_path(@user), method: :delete, remote: true, class: "btn btn-danger" %>
    <%= link_to "No", "#", class: "btn btn-default", data: { dismiss: "modal" } %>
    </div>
    </div>
</div>